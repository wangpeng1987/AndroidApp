<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/dimen_35_dp"
    android:background="@drawable/radiu_fill_color_15">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/radiu_edit_search_aciv"
        android:layout_width="@dimen/dimen_22_dp"
        android:layout_height="@dimen/dimen_22_dp"
        android:layout_marginLeft="@dimen/dimen_12_dp"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/radiu_edit_acet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/radiu_edit_search_aciv"
        android:layout_marginLeft="@dimen/dimen_5_dp"
        android:textColor="@color/colour_1009"
        android:background="@null"
        android:gravity="left|center_vertical"
        android:textSize="16sp"/>

</RelativeLayout>