<?xml version="1.0" encoding="utf-8"?>
<com.wop.common.ui.widget.RowCommonArrow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/selector_rect_fill_color_05"
    >

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/row_common_left_aciv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="12dp"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/row_common_left_actv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/row_common_left_aciv"
        android:textSize="@dimen/font_16_sp"
        android:textColor="@color/colour_1"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/row_common_right_aciv"
        android:layout_width="@dimen/dimen_22_dp"
        android:layout_height="@dimen/dimen_22_dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dimen_10_dp"
        android:layout_centerVertical="true"/>

    <com.wop.common.ui.widget.AutofitTextView
        android:id="@+id/row_common_right_actv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:layout_toRightOf="@+id/row_common_left_actv"
        android:layout_toLeftOf="@id/row_common_right_aciv"
        android:layout_centerVertical="true"/>

</com.wop.common.ui.widget.RowCommonArrow>